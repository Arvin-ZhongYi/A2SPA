                    <td>{{item.currency}}</td>
                    <td>{{item.emailAddress}}</td>
                    <td>{{item.password}}</td>
                    <td><button type="button" class="btn btn-danger" (click)="deleteRecord(item, $event)">X</button> </td>
                </tr>
