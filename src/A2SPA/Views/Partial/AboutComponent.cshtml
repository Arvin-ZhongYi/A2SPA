@using A2SPA.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,A2SPA
@model TestData

@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<p>Examples of Angular 2 data served by ASP.Net Core Web API:</p>

<form #testForm="ngForm">
    <div *ngIf="testDataList != null && testDataList.length > 0" class="col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-1"> ID </th>
                    <th class="col-md-3"> Username </th>
                    <th class="col-md-2"> Currency </th>
                    <th class="col-md-3"> EmailAddress </th>
                    <th class="col-md-2"> Password </th>
                    <td><button type="button" class="btn btn-info btn-sm" (click)="tablemode='add'">+</button></td>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let item of testDataList">
                    <td (click)="selectCurrentItem(item,$event)">{{item.id}}</td>
                    <td>{{item.username}}</td>
                    <td>{{item.currency}}</td>
                    <td>{{item.emailAddress}}</td>
                    <td>{{item.password}}</td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" (click)="deleteRecord(item, $event)">X</button>
                        <button type="button" class="btn btn-info btn-sm" (click)="tablemode=='detail'">?</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <div class="row" [hidden]="!(tablemode=='add'||tablemode=='edit')">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Data Entry
                    <button type="button" class="btn btn-info btn-sm pull-right" (click)="tablemode='list'">-</button>
                </div>
                <div class="panel-body">
                    <tag-di for="Username"></tag-di>
                    <tag-di for="Currency"></tag-di>
                    <tag-di for="EmailAddress"></tag-di>
                    <tag-di for="Password"></tag-di>
                </div>
                <div class="panel-footer">
                    <div>
                        <button type="button" class="btn btn-warning" (click)="addTestData($event)">Save to database</button>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="row" [hidden]="!tablemode=='display'">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Data Display
                    <button type="button" class="btn btn-info btn-sm pull-right" (click)="tablemode='list';">-</button>
                </div>
                <div class="panel-body">
