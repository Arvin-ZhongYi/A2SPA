@using A2SPA.ViewModels
@using A2SPA.ViewModels.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,A2SPA
@model LoginViewModel

<div class="jumbotron center-block">
    <h1>Login</h1>

    <form role="form" (submit)="login($event, email.value, password.value)">
        <tag-di for="Email"></tag-di>
        <tag-di for="Password"></tag-di>
        <button type="submit" class="btn btn-default">Submit</button>
        <a [routerLink]="['/signup']">Click here to Signup</a>
    </form>
</div>
